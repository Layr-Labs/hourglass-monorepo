{
  "obsidian": {
    "deployment": {
      "type": "hybrid",
      "controlPlane": {
        "orchestrator": {
          "desiredCount": 3,
          "cpu": 2048,
          "memory": 4096
        },
        "registry": {
          "desiredCount": 2,
          "cpu": 1024,
          "memory": 2048,
          "cacheSize": "100Gi"
        },
        "proxy": {
          "desiredCount": 3,
          "cpu": 512,
          "memory": 1024
        }
      },
      "computeNodes": {
        "minSize": 3,
        "maxSize": 20,
        "instanceTypes": ["m5.xlarge", "m5.2xlarge"],
        "spotEnabled": true,
        "spotMaxPrice": "0.50"
      }
    },
    "monitoring": {
      "enableDetailedMetrics": true,
      "logRetentionDays": 30,
      "alarmNotificationEmail": "ops@example.com"
    },
    "security": {
      "enableWAF": true,
      "enableGuardDuty": true,
      "vpcFlowLogs": true
    }
  }
}
# Hourglass Performer Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# Server Configuration
# =============================================================================

# Port to listen on (default: 8080)
PORT=8080

# Host to bind to (default: 0.0.0.0)
HOST=0.0.0.0

# Request timeout in milliseconds (default: 10000)
TIMEOUT=10000

# =============================================================================
# Application Configuration
# =============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Enable debug mode (true/false)
DEBUG=true

# Log level (error, warn, info, debug, trace)
LOG_LEVEL=info

# =============================================================================
# Performance Configuration
# =============================================================================

# Maximum number of concurrent tasks (default: 10)
MAX_CONCURRENT_TASKS=10

# Task execution timeout in milliseconds (default: 30000)
TASK_TIMEOUT=30000

# =============================================================================
# Health and Monitoring
# =============================================================================

# Health check interval in milliseconds (default: 30000)
HEALTH_CHECK_INTERVAL=30000

# Enable metrics collection (true/false)
METRICS_ENABLED=true

# Metrics server port (default: 9090)
METRICS_PORT=9090

# =============================================================================
# TypeChain Configuration
# =============================================================================

# Enable TypeChain for contract interaction (true/false)
TYPECHAIN_ENABLED=true

# Path to contract ABIs (default: ./contracts)
CONTRACTS_PATH=./contracts

# =============================================================================
# Security Configuration
# =============================================================================

# Enable CORS (true/false)
CORS_ENABLED=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=*

# =============================================================================
# External Services
# =============================================================================

# Aggregator service URL (optional)
# AGGREGATOR_URL=http://localhost:8081

# Executor service URL (optional)
# EXECUTOR_URL=http://localhost:8082

# =============================================================================
# Storage Configuration
# =============================================================================

# Data directory (default: ./data)
DATA_DIR=./data

# Logs directory (default: ./logs)
LOGS_DIR=./logs

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker image tag
DOCKER_IMAGE_TAG=latest

# Docker registry
DOCKER_REGISTRY=ghcr.io/layr-labs

# =============================================================================
# Deployment Configuration
# =============================================================================

# Deployment environment (local, staging, production)
DEPLOYMENT_ENV=local

# Kubernetes namespace (if using K8s)
K8S_NAMESPACE=hourglass

# Service name
SERVICE_NAME=hourglass-performer